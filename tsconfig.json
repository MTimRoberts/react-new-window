{
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "noEmit": false,
    "declaration": true,
    "moduleResolution": "node",
    "jsx": "react",
    "types": ["vitest/globals"]
  },
  "include": ["./src/**/*", "./tests/**/*"]
}
